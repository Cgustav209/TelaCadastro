<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TelaCadastro.MainPage"
              Title="Cadastro Locatário">

    <!-- Layout principal com Scroll -->
 <ScrollView >
     <Grid Padding="20">

         <!-- Grid principal com duas colunas: formulário e imagem -->
         <Grid.ColumnDefinitions>
             <ColumnDefinition Width="2*" />
             <ColumnDefinition Width="*" />
         </Grid.ColumnDefinitions>

         <!-- ==================== ÁREA DO FORMULÁRIO ==================== -->
         <Border Grid.Column="0" Style="{StaticResource EstiloBorda}">
             <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="*">

                 <!-- Título -->
                 <Label Text="Locatário" 
         Style="{StaticResource LabelTitulo}" 
         Grid.Row="0" />

                 <!-- Campo Nome -->
                 <Entry Text="{Binding Usuario.Nome}"
         Placeholder="Nome"
         Style="{StaticResource EstiloEntry}"
         Grid.Row="1" />

                 <!-- Campo Email -->
                 <Entry Text="{Binding Usuario.Email}"
         Placeholder="E-mail"
         Style="{StaticResource EstiloEntry}"
         Grid.Row="2" />

                 <!-- Campo CPF -->
                 <Entry Text="{Binding Usuario.CPF}"
         Placeholder="CPF"
         Style="{StaticResource EstiloEntry}"
         Grid.Row="3" />

                 <!-- Campo Endereço -->
                 <Entry Text="{Binding Usuario.Endereco}"
         Placeholder="Endereço"
         Style="{StaticResource EstiloEntry}"
         Grid.Row="4" />

                 <!-- CheckBox termos -->
                 <Grid Grid.Row="5" ColumnDefinitions="Auto,*">
                     <CheckBox IsChecked="{Binding AceitouTermos}" VerticalOptions="Center" />
                     <Label Text="Aceito os termos de uso" 
             Style="{StaticResource LabelNormal}" 
             Grid.Column="1" 
             VerticalOptions="Center"/>
                 </Grid>

                 <!-- CheckBox não sou robô -->
                 <Grid Grid.Row="6" ColumnDefinitions="Auto,*">
                     <CheckBox IsChecked="{Binding NaoSouRobo}" VerticalOptions="Center" />
                     <Label Text="Não sou um robô" 
             Style="{StaticResource LabelNormal}" 
             Grid.Column="1" 
             VerticalOptions="Center"/>
                 </Grid>

                 <!-- Botão de cadastro -->
                 <Button Text="Cadastrar"
          Command="{Binding CadastrarCommand}"
          Style="{StaticResource EstiloBotao}"
          Grid.Row="7" />
             </Grid>
         </Border>

         <!-- ==================== ÁREA DA DIREITA ==================== -->
         <Border Grid.Column="1" Style="{StaticResource telaDireita}">
             <Grid>
                 <Label Text="🔧"
         FontSize="120"
         HorizontalOptions="Center"
         VerticalOptions="Center"/>
             </Grid>
         </Border>

     </Grid>

 </ScrollView>

</ContentPage>
